{{!
    @template mod_videotime/text_tab

    This template for text track tab

    Variables optional for this template:
    * textracks - array of available tracks

    Example context (json):
    {
        "texttracks": [
            {
                "lang": "en",
                "kind": "captions",
                "show": true,
                "label": "Information",
                "captions": [
                     {
                          "starttime": "00:05.00",
                          "lines": [
                              {"text": "Hello world"}
                          ]
                     }
                ]
            }
        ]
    }

}}
{{# texttracks }}
    {{# captions }}
    <div class="row"{{^ show }} style="display: none;"{{/ show }} data-lang="{{ lang}}">
        <div class="col-3" style="max-width: 100px;">
            <a href="#" data-action="cue" data-start="{{ starttime }}">{{starttime}}</a>
        </div>
        <div class="col-9">
            {{# lines }}
            <div>{{ text }}</div>
            {{/ lines }}
        </div>
    </div>
    {{/ captions }}
{{/ texttracks }}
