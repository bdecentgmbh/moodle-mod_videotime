{{!
    @template mod_videotime/text_tab

    This template for text track tab

    Variables optional for this template:
    * textracks - array of available tracks

    Example context (json):
    {
        "texttracks": [
            {
                "language": "en",
                "kind": "captions",
                "label": "Information",
                "captions": [
                     {
                          "starttime": "00:05.00",
                          "text": "Hello world"
                     }
                ]
            }
        ]
    }

}}
{{# texttracks }}
<div data-lang="{{ language }}">
    {{# captions }}
    <div>
        <a href="#" data-action="cue" data-start="{{ starttime }}">{{starttime}}</a><pre>{{ text }}</pre>
    </div>
    {{/ captions }}
</div>
{{/ texttracks }}
